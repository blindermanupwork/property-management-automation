# Environment Configuration Template
# Copy this file to .env and fill in your actual values

# Environment Type
ENVIRONMENT=development

# Airtable Configuration
AIRTABLE_API_KEY=your_airtable_api_key_here
AIRTABLE_BASE_ID=your_airtable_base_id_here
AIRTABLE_TABLE_NAME=Reservations

# Gmail Configuration (for CSV downloads)
# Get credentials.json from Google Cloud Console
# token.pickle will be generated automatically

# HousecallPro Configuration (if using HCP sync)
HCP_API_KEY=your_housecallpro_api_key_here
HCP_COMPANY_ID=your_company_id_here
HCP_DEFAULT_EMPLOYEE_ID=your_default_employee_id_here
HCP_WEBHOOK_SECRET=your_hcp_webhook_secret_here

# Webhook Configuration
SERVATIV_WEBHOOK_SECRET=your_servativ_webhook_secret_here

# Evolve Portal Credentials (if using Evolve scraping)
EVOLVE_USERNAME=your_evolve_username
EVOLVE_PASSWORD=your_evolve_password

# Email Alerts (optional)
ALERT_EMAIL=your-email@domain.com

# OpenAI API Key (for Airtable agent)
OPENAI_API_KEY=your_openai_api_key_here